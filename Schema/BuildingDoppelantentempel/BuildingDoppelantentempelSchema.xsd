<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="https://www.w3.org/2001/XMLSchema"
    targetNamespace="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/BuildingDoppelantentempel"
    xmlns:smcb_budt="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/BuildingDoppelantentempel"
    xmlns:smcb_ro="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Roof"
    xmlns:smcb_bu="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Building"
    xmlns:smcb_co="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Component"
    xmlns:smcb_ct="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/CommonTypes"
    elementFormDefault="qualified" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance">
    
    <xs:import
        namespace="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/CommonTypes"
        schemaLocation="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/CommonTypes/CommonTypes.xsd"/>
    
    <xs:import namespace="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Roof"
        schemaLocation="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Roof/RoofSchema.xsd"/>
    
    <xs:import
        namespace="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Component"
        schemaLocation="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Component/ComponentSchema.xsd"/>
    
    <xs:import
        namespace="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Building"
        schemaLocation="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Building/BuildingSchema.xsd"/>
    
    <xs:element name="buildingDoppelantentempel">
        <xs:annotation>
            <xs:documentation xml:lang="en"> Element smcb_contains all necessary information to smcb_construsmcb_ct a
                smcb_building. </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="smcb_bu:dimensions"/>
                <xs:element ref="smcb_budt:doppelantentempelParameters" />
                <xs:element ref="smcb_ro:roof"/>
                <xs:element ref="smcb_budt:buildingComponentsDoppelantentempel" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="buildingComponentsDoppelantentempel">
        <xs:annotation>
            <xs:documentation xml:lang="en">
                The Doppelantentempel is a specialized smcb_building which needs a special set of smcb_components to be smcb_construsmcb_cted. This element defines all necessary smcb_building-smcb_component which have to be defined.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="smcb_co:roundstairs" />
                <xs:element ref="smcb_co:fascia" />
                <xs:element ref="smcb_co:pillar" />
                <xs:element ref="smcb_co:edgeaddition" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="doppelantentempelParameters">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="architraveHeight" type="smcb_ct:positiveFloat" >
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            Height of the Architrave.
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="metopeHeight" type="smcb_ct:positiveFloat">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            Height of the Metope.
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="geisonHeight" type="smcb_ct:positiveFloat">
                    <xs:annotation>
                        <xs:documentation xml:lang="en">
                            Height of the Gleison.
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
</xs:schema>
