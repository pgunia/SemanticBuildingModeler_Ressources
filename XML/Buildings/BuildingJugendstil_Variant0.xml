<?xml version="1.0" encoding="UTF-8"?>

<buildingJugendstil
    xmlns="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/BuildingJugendstil"
    xsi:schemaLocation="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/BuildingJugendstil 
    http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/BuildingJugendstil/BuildingJugendstilSchema.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:smcb_ct="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/CommonTypes"
    xmlns:smcb_eb="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/ExampleBasedSynthesis"
    xmlns:smcb_cb="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/ClassBasedFootprint"
    xmlns:smcb_ro="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/Roof"
    xmlns:smcb_bu="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/Building"
    xmlns:smcb_co="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/Component"
    xmlns:smcb_fp="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/Footprint"
    xmlns:smcb_op="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/Objectplacement"
    xmlns:smcb_pb="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/PolygonFootprint"
    xmlns:smcb_fl="http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/SchemaDocuments/Floor">
    <smcb_bu:dimensions>
        <smcb_bu:height>
            <smcb_ct:lowerBorder>200</smcb_ct:lowerBorder>
            <smcb_ct:upperBorder>300</smcb_ct:upperBorder>
        </smcb_bu:height>
        <smcb_bu:length>
            <smcb_ct:lowerBorder>150</smcb_ct:lowerBorder>
            <smcb_ct:upperBorder>210</smcb_ct:upperBorder>
        </smcb_bu:length>
        <smcb_bu:width>
            <smcb_ct:lowerBorder>100</smcb_ct:lowerBorder>
            <smcb_ct:upperBorder>160</smcb_ct:upperBorder>
        </smcb_bu:width>
        <smcb_bu:wallThickness>5</smcb_bu:wallThickness>
    </smcb_bu:dimensions>
    <floorHeights>
        <floorHeight>
            <position>GROUND</position>
            <height>
                <smcb_ct:lowerBorder>50</smcb_ct:lowerBorder>
                <smcb_ct:upperBorder>65</smcb_ct:upperBorder>
            </height>
        </floorHeight>
        <floorHeight>
            <position>INTERMEDIATE</position>
            <height>
                <smcb_ct:lowerBorder>70</smcb_ct:lowerBorder>
                <smcb_ct:upperBorder>95</smcb_ct:upperBorder>
            </height>
        </floorHeight>
        <floorHeight>
            <position>TOP</position>
            <height>
                <smcb_ct:lowerBorder>55</smcb_ct:lowerBorder>
                <smcb_ct:upperBorder>75</smcb_ct:upperBorder>
            </height>
        </floorHeight>
    </floorHeights>
    
    <smcb_ro:roof>
        <smcb_ct:extern>
            http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/XML/Roof/StandardRoof_DifferentSlopes.xml
        </smcb_ct:extern>
    </smcb_ro:roof>
    
    <smcb_bu:buildingComponents>
        <smcb_co:component>
            <smcb_co:window>
                <smcb_co:componentModelSource>
                    <smcb_co:modelCategory>Window_Jugendstil</smcb_co:modelCategory>
                </smcb_co:componentModelSource>
                <smcb_co:translationRatioForWindows>0.4</smcb_co:translationRatioForWindows>
                <smcb_co:minDistanceBetweenWindowsRatio>0.05</smcb_co:minDistanceBetweenWindowsRatio>
                <smcb_co:windowToTargetQuadRatio>
                    <smcb_ct:lowerBorder>0.3</smcb_ct:lowerBorder>
                    <smcb_ct:upperBorder>0.5</smcb_ct:upperBorder>
                </smcb_co:windowToTargetQuadRatio>
            </smcb_co:window>
        </smcb_co:component>
        <smcb_co:component>
            <smcb_co:door>
                <smcb_co:componentModelSource>
                    <smcb_co:modelCategory>Door</smcb_co:modelCategory>
                </smcb_co:componentModelSource>
                <smcb_co:distanceToCornerRatio>0.1</smcb_co:distanceToCornerRatio>
                <smcb_co:doorToTargetQuadRatio>
                    <smcb_ct:lowerBorder>0.5</smcb_ct:lowerBorder>
                </smcb_co:doorToTargetQuadRatio>
            </smcb_co:door>
        </smcb_co:component>
        <smcb_co:component>
            <smcb_co:windowLedge>
                <smcb_co:componentModelSource>
                    <smcb_co:modelCategory>Moulding_Eckstein</smcb_co:modelCategory>
                </smcb_co:componentModelSource>
                <smcb_co:ledgeToTargetQuadRatio>0.07</smcb_co:ledgeToTargetQuadRatio>
            </smcb_co:windowLedge>
        </smcb_co:component>
        <smcb_co:component>
            <smcb_co:fascia>
                <smcb_co:componentModelSource>
                    <smcb_co:modelCategory>Moulding_Gotisch</smcb_co:modelCategory>
                </smcb_co:componentModelSource>
                <smcb_co:mouldingHeightRatio>0.1</smcb_co:mouldingHeightRatio>
                <smcb_co:targetFloors>
                    <smcb_co:floorPosition>ALL</smcb_co:floorPosition>
                </smcb_co:targetFloors>
            </smcb_co:fascia>
        </smcb_co:component>
    </smcb_bu:buildingComponents>
    <jugendstilProbabilities>
        <modifyGroundFootprintProbability>0.4</modifyGroundFootprintProbability>
        <modifyIntermediateFootprintProbability>0.5</modifyIntermediateFootprintProbability>
        <modifyTopFootprintProbability>0.2</modifyTopFootprintProbability>
        <useGroundFloorFootprintForTopFloorProbability>0.6</useGroundFloorFootprintForTopFloorProbability>
    </jugendstilProbabilities>
    <objectplacementConfiguration>
        <smcb_ct:extern>
            http://crazyhorse.archaeologie.uni-koeln.de/~pgunia/XML/ObjectPlacement/JugendstilObjectplacement.xml
        </smcb_ct:extern>
    </objectplacementConfiguration>
</buildingJugendstil>
