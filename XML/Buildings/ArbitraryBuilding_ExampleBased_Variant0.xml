<?xml version="1.0" encoding="UTF-8"?>
<building xmlns="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Building"
    xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
    xmlns:smcb_fl="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Floor"
    xmlns:smcb_fp="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Footprint"
    xmlns:smcb_ct="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/CommonTypes"
    xmlns:smcb_ro="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Roof"
    xmlns:smcb_bu="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Building"
    xmlns:smcb_co="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Component"
    xmlns:smcb_cb="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/ClassBasedFootprint"
    xmlns:smcb_eb="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/ExampleBasedSynthesis"
    xmlns:smcb_op="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Objectplacement"
    xsi:schemaLocation="https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Building 
    https://raw.github.com/pgunia/SemanticCityBuilder/master/Schema/Building/BuildingSchema.xsd">
    <dimensions>
        <smcb_bu:width>
            <smcb_ct:lowerBorder>120.0</smcb_ct:lowerBorder>
            <smcb_ct:upperBorder>180.0</smcb_ct:upperBorder>
        </smcb_bu:width>
        <smcb_bu:height>
            <smcb_ct:lowerBorder>150.0</smcb_ct:lowerBorder>
            <smcb_ct:upperBorder>190.0</smcb_ct:upperBorder>
        </smcb_bu:height>
        <smcb_bu:length>
            <smcb_ct:lowerBorder>75.0</smcb_ct:lowerBorder>
            <smcb_ct:upperBorder>95.0</smcb_ct:upperBorder>
        </smcb_bu:length>
        <smcb_bu:wallThickness>3.0</smcb_bu:wallThickness>
    </dimensions>
    <smcb_ro:roof>
        <smcb_ct:extern>
            https://raw.github.com/pgunia/SemanticCityBuilder/master/XML/Roof/StandardRoof_EqualSlopes.xml
        </smcb_ct:extern>
    </smcb_ro:roof>
    <smcb_bu:floors>
        <smcb_fl:floor>
            <smcb_fl:floorposition>GROUND</smcb_fl:floorposition>
            <smcb_fp:footprint src="exampleBased">
                <smcb_ct:extern>
                    https://raw.github.com/pgunia/SemanticCityBuilder/master/XML/FootprintExampleBased/Footprint_ExampleBasedSynthesis.xml
                </smcb_ct:extern>
            </smcb_fp:footprint>
            <smcb_fl:floorHeight>
                <smcb_ct:lowerBorder>40.0</smcb_ct:lowerBorder>
                <smcb_ct:upperBorder>55.0</smcb_ct:upperBorder>
            </smcb_fl:floorHeight>
        </smcb_fl:floor>
        <smcb_fl:floor>
            <smcb_fl:floorposition>INTERMEDIATE</smcb_fl:floorposition>
            <smcb_fl:reuseFloorDefinition>GROUND</smcb_fl:reuseFloorDefinition>
            <smcb_fl:floorHeight>
                <smcb_ct:lowerBorder>55.0</smcb_ct:lowerBorder>
                <smcb_ct:upperBorder>75.0</smcb_ct:upperBorder>
            </smcb_fl:floorHeight>
        </smcb_fl:floor>
        <smcb_fl:floor>
            <smcb_fl:floorposition>TOP</smcb_fl:floorposition>
            <smcb_fl:reuseFloorDefinition>GROUND</smcb_fl:reuseFloorDefinition>
            <smcb_fl:floorHeight>
                <smcb_ct:lowerBorder>45.0</smcb_ct:lowerBorder>
                <smcb_ct:upperBorder>55.0</smcb_ct:upperBorder>
            </smcb_fl:floorHeight>
        </smcb_fl:floor>
    </smcb_bu:floors>
    
    <smcb_bu:buildingComponents>
        <smcb_co:component>
            <smcb_co:window>
                <smcb_co:componentModelSource>
                    <smcb_co:modelCategory>Window</smcb_co:modelCategory>
                </smcb_co:componentModelSource>
                <smcb_co:translationRatioForWindows>0.4</smcb_co:translationRatioForWindows>
                <smcb_co:minDistanceBetweenWindowsRatio>0.01</smcb_co:minDistanceBetweenWindowsRatio>
                <smcb_co:windowToTargetQuadRatio>
                    <smcb_ct:lowerBorder>0.3</smcb_ct:lowerBorder>
                    <smcb_ct:upperBorder>0.5</smcb_ct:upperBorder>
                </smcb_co:windowToTargetQuadRatio>
            </smcb_co:window>
        </smcb_co:component>
        <smcb_co:component>
            <smcb_co:door>
                <smcb_co:componentModelSource>
                    <smcb_co:modelCategory>Door</smcb_co:modelCategory>
                </smcb_co:componentModelSource>
                <smcb_co:distanceToCornerRatio>0.1</smcb_co:distanceToCornerRatio>
                <smcb_co:doorToTargetQuadRatio>
                    <smcb_ct:lowerBorder>0.5</smcb_ct:lowerBorder>
                </smcb_co:doorToTargetQuadRatio>
            </smcb_co:door>
        </smcb_co:component>
        <smcb_co:component>
            <smcb_co:moulding>
                <smcb_co:componentModelSource>
                    <smcb_co:modelCategory>Moulding_Eckstein</smcb_co:modelCategory>
                </smcb_co:componentModelSource>
                <smcb_co:verticalAlignment>TOP</smcb_co:verticalAlignment>
                <smcb_co:mouldingHeightRatio>0.05</smcb_co:mouldingHeightRatio>
                <smcb_co:targetFloors>
                    <smcb_co:floorPosition>ALL</smcb_co:floorPosition>
                </smcb_co:targetFloors>
                <smcb_co:targetWalls>
                    <smcb_co:direction>FRONT</smcb_co:direction>
                </smcb_co:targetWalls>
            </smcb_co:moulding>
        </smcb_co:component>
    </smcb_bu:buildingComponents>
</building>
