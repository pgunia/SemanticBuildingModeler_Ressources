<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  targetNamespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/City"
  xmlns:smcb_ci="http://raw.github.com/pgunia/SemanticCityBuilder/master/City"
  xmlns:smcb_ct="http://raw.github.com/pgunia/SemanticCityBuilder/master/CommonTypes"
  xmlns:smcb_fp="http://raw.github.com/pgunia/SemanticCityBuilder/master/Footprint"
  xmlns:smcb_fl="http://raw.github.com/pgunia/SemanticCityBuilder/master/Floor"
  xmlns:smcb_co="http://raw.github.com/pgunia/SemanticCityBuilder/master/Component"
  xmlns:smcb_xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:smcb_bu="http://raw.github.com/pgunia/SemanticCityBuilder/master/Building"
  xmlns:smcb_buj="http://raw.github.com/pgunia/SemanticCityBuilder/master/BuildingJugendstil"
  xmlns:smcb_ro="http://raw.github.com/pgunia/SemanticCityBuilder/master/Roof"
  xmlns:smcb_budt="http://raw.github.com/pgunia/SemanticCityBuilder/master/BuildingDoppelantentempel"
  elementFormDefault="qualified">

  <xs:import
    namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/Building"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/Building/BuildingSchema.xsd"/>
  <xs:import
    namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/BuildingJugendstil"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/BuildingJugendstil/BuildingJugendstilSchema.xsd"/>
  <xs:import
    namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/BuildingDoppelantentempel"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/BuildingDoppelantentempel/BuildingDoppelantentempelSchema.xsd"/>
  <xs:import
    namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/Component"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/Component/ComponentSchema.xsd"/>
  <xs:import namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/Floor"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/FloorSchema.xsd"/>
  <xs:import
    namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/Footprint"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/Footprint/FootprintSchema.xsd"/>
  <xs:import namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/Roof"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/Roof/RoofSchema.xsd"/>
  <xs:import
    namespace="http://raw.github.com/pgunia/SemanticCityBuilder/master/CommonTypes"
    schemaLocation="http://raw.github.com/pgunia/SemanticCityBuilder/master/CommonTypes/CommonTypes.xsd"/>
  <xs:element name="city">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="smcb_ci:buildingDescriptor" minOccurs="1" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="buildingDescriptor">
    <xs:annotation>
      <xs:documentation xml:lang="en"> This element contains all necessary information to construct
        a city based on a number of different building specifications. </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element name="count" type="xs:positiveInteger">
          <xs:annotation>
            <xs:documentation xml:lang="en"> Number of buildings which are constructed based on the
              given building description. </xs:documentation>
          </xs:annotation>
        </xs:element>
        <xs:choice>
          <xs:choice>
            <xs:element ref="smcb_bu:building"/>
            <xs:element ref="smcb_buj:buildingJugendstil"/>
            <xs:element ref="smcb_budt:buildingDoppelantentempel"/>
          </xs:choice>
          <xs:sequence>
            <xs:element name="buildingType" type="smcb_ci:class"/>
            <xs:element ref="smcb_ct:extern"/>
          </xs:sequence>
        </xs:choice>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:simpleType name="class">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ArbitraryBuilding"/>
      <xs:enumeration value="JugendstilBuilding"/>
      <xs:enumeration value="Doppelantentempel"/>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>
